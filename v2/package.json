{
  "name": "open-hack-week-v2",
  "version": "1.0.0",
  "description": "Open Hack Week Landing Page Version 2",
  "main": "index.js",
  "scripts": {
    "watch:sass": "nodemon -e scss -x npm run compile:sass",
    "dev": "live-server",
    "start": "npm-run-all --parallel dev watch:sass",
    "compile:sass": "node-sass scss/main.scss css/style.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.comp.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass compress:css"
  },
  "author": "Timilehin Olumofin",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
